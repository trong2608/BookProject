@using PagedList.Mvc
@model PagedList.IPagedList<Model.DataModel.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin_quanli/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">


            <section class="main-content">
                <div class="col-md-12">
                    <!-- DATA TABLE -->

                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <form action="#" method="post">
                                

                                    <input type="text" name="Search" value="@ViewBag.Search" id="Search" class="form-control" placeholder="Search...">
                                
                                <div class="row">



                                    @*<input class="au-input au-input--xl col-lg-3" type="search" name="search" id="search" value="@ViewBag.search" placeholder="Nhập từ khóa càn tìm kiếm " />*@

                                   
                                    <div class="form-group col-lg-12 ">
                     
                                        <label>Tác giả </label>
                                        @Html.DropDownList("author_id", null, htmlAttributes: new { @class = "form-control", author_id = ViewBag.au }, optionLabel : "---All--- ") 

                                    </div>
                                    @*<div class="form-group col-lg-3">
                                        <label>Danh mục </label>
                                        @Html.DropDownList("cat_id", null, htmlAttributes: new { @class = "form-control" })

                                    </div>
                                    <div class="form-group col-lg-3">
                                        <label>Nhà xuất bản</label>
                                        @Html.DropDownList("pub_id", null, htmlAttributes: new { @class = "form-control" })

                                    </div>*@
                                </div>




                            </form>
                        </div>
                        <div class="table-data__tool-right">


                            <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <a href="@Url.Action("Create","Products")"   <i style="color: white" > Thêm mới</i> </a>
                            </button>



                        </div>

                    </div>
                    <div>
                        
                    </div>
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>

                                <th>Mã sách </th>
                                <th>Tên sách  </th>
                                <th>Ảnh</th>
                                <th>Mô tả</th>
                                <th>Ngày tạo</th>
                                <th>giá</th>
                                <th>giá sau khi khuyến mãi</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="list-data">
                            @foreach (var item in Model)
            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_name)
                                    </td>
                                    <td>
                                        <img src="@item.pro_image" width="50" height="50" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.create_date)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.pro_price) đ</td>
                                   

                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_sale_price)
                                    </td>

                                    <td>

                                        <button type="button" class="btn btn-outline-primary" disabled="">@Html.ActionLink("Sửa", "Edit", new { id = item.pro_id }) </button>
                                        <button type="button" class="btn btn-outline-warning" disabled="">@Html.ActionLink("Chi tiết", "Details", new { id = item.pro_id })</button>
                                        <button type="button" class="btn btn-outline-danger" disabled="">@Html.ActionLink("Xóa", "Delete", new { id = item.pro_id })</button>

                                    </td>
                                </tr>

                            }


                        </tbody>
                    </table>

                        <nav aria-label="navigation">

                            <div class="pagination">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = ViewBag.search, author_id = ViewBag.au }))
                            </div>

                        </nav>


                    </div>
                
            </section>
        </div>
    </div>
</div>